<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd">
<channel>
<title>{{ config.name }}</title>
<link>{{ config.domain }}</link>
<language>en-us</language>
<copyright>{{ config.copyright }}</copyright>
<itunes:subtitle>{{ config.subtitle }}</itunes:subtitle>
<itunes:author>{{ config.authors }}</itunes:author>
<itunes:summary>{{ config.description }}</itunes:summary>
<description>{{ config.description }}</description>
<itunes:owner>
    <itunes:name>{{ secrets.itunes_name }}</itunes:name>
    <itunes:email>{{ secrets.itunes_email }}</itunes:email>
</itunes:owner>
<itunes:image href="{{config.domain}}/assets/images/pincount_logo_1400x1400.jpg"/>
<itunes:category text="{{ config.itunes_category }}">
  <itunes:category text="{{ config.itunes_subcategory }}"/>
</itunes:category>
<itunes:explicit>no</itunes:explicit>
<itunes:keywords>{{ config.keywords }}</itunes:keywords>

{% for episode in episodes %}
<item>
  <title>{{ episode.title }}</title>
  <itunes:author>{{ config.name }}</itunes:author>
  <itunes:subtitle>{{ episode.subtitle }}</itunes:subtitle>
  <pubDate>{{ episode.itunes_date }}</pubDate>
  <link>{{ config.domain }}{{ episode.episode_path }}</link>
  <enclosure length="{{episode.length}}" type="audio/mpeg" url="{{ config.domain }}{{episode.mp3_path}}"/>
  <guid>{{ episode.guid }}</guid>
  <itunes:duration>{{ episode.duration }}</itunes:duration>
  <itunes:explicit>no</itunes:explicit>
  <description>
    <![CDATA[{{ episode.rendered_body }}]]>
  </description>
</item>
{% endfor %}

</channel>
</rss>
