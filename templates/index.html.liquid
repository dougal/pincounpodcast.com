<!DOCTYPE html>
<html lang="en">
<head>
  <title>{{ config.name }}</title>
</head>
<body>

  <h1>{{ config.name }}</h1>

  <p>{{ config.subtitle }}</p>

  {% for episode in episodes %}
    <article id="episode_{{episode.number}}">
      <h2><a href="{{episode.episode_path}}">{{episode.title}}</a></h2>
      <h3>{{episode.subtitle}}</h3>
      <time>{{episode.pretty_date}}</time>
      {{episode.rendered_body}}
      <p><a href="{{episode.mp3_path}}">Download MP3 ({{episode.length_megabytes}}MB)</a></p>
    </article>
  {% endfor %}

  <footer>
    &copy; {{ config.authors }}
  </footer>

</body>
</html>
